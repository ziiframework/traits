{
    "name": "ziiframework/traits",
    "description": "zii-framework traits",
    "type": "library",
    "keywords": [
        "zii-framework",
        "traits"
    ],
    "homepage": "https://github.com/ziiframework/traits",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/ziiframework/traits",
        "issues": "https://github.com/ziiframework/traits/issues"
    },
    "authors": [
        {
            "name": "charescape",
            "homepage": "https://github.com/charescape"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "charescape/php-functions": "1.0.x-dev",
        "symfony/string": "^5.4",
        "ziiframework/zii": ">=3.5.25"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "ziiframework/composer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Zii\\Traits\\": "src/"
        }
    },
    "scripts": {
        "redo-install": [
            "rm -rf vendor/",
            "rm -f composer.lock",
            "@composer self-update -vvv",
            "@composer install -vvv"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-main": "4.0.x-dev"
        }
    }
}
